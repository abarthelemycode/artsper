{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": ".",
    "paths": {
      "@env/*"      : ["environments/*"],
      "@/*"         : ["app/*"],
      "@core/*"     : ["app/_core/*"],
      "@shared/*"   : ["app/_shared/*"],
      "@login/*"    : ["app/login/*"],
      "@catalog/*"  : ["app/catalog/*"],
    },
    "types": [],
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}
