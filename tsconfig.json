{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "paths": {
      "@env/*"      : ["environments/*"],
      "@/*"         : ["app/*"],
      "@core/*"     : ["app/_core/*"],
      "@shared/*"   : ["app/_shared/*"],
      "@login/*"    : ["app/login/*"],
      "@catalog/*"  : ["app/catalog/*"],
    },
    "sourceMap": true,
    "declaration": false,
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  }
}
